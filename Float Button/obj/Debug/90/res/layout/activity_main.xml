<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"><ScrollView android:layout_width="match_parent" android:layout_height="match_parent"><LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="10px"><TextView android:layout_width="match_parent" android:padding="15px" android:background="#e74c3c" android:id="@+id/text_characters" android:textColor="@android:color/white" android:text="[Characters] is required" android:layout_height="wrap_content" /><EditText android:layout_width="match_parent" android:textSize="30px" android:layout_marginBottom="50px" android:hint="Input Characters" android:id="@+id/input_characters" android:layout_height="100px" /><TextView android:layout_width="match_parent" android:padding="15px" android:background="#e74c3c" android:id="@+id/text_cursor" android:textColor="@android:color/white" android:text="[Cursor Index] is required" android:layout_height="wrap_content" /><EditText android:layout_width="match_parent" android:textSize="30px" android:hint="Input Cursor Index" android:inputType="number" android:id="@+id/input_cursor" android:layout_height="100px" /><LinearLayout android:layout_width="match_parent" android:layout_marginBottom="30px" android:layout_height="wrap_content"><TextView android:layout_width="wrap_content" android:text="Min. and Max for cursor index [ 0 - " android:layout_height="wrap_content" /><TextView android:layout_width="wrap_content" android:text="10 ]" android:id="@+id/max_cursor" android:layout_height="wrap_content" /></LinearLayout><!--
